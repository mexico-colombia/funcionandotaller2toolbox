<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/contenedor"
    tools:context="com.example.cristian.mytoolbox.com.omar.finalherramientas.FragmentPaint">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/colorsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_red_500" />

                    <Button
                        android:id="@+id/color2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_blue_500" />

                    <Button
                        android:id="@+id/color3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_green_500" />

                    <Button
                        android:id="@+id/color4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_yellow_500" />

                    <Button
                        android:id="@+id/color5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_amber_500" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/color6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_black_1000" />

                    <Button
                        android:id="@+id/color7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_blue_grey_500" />

                    <Button
                        android:id="@+id/color8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_brown_500" />

                    <Button
                        android:id="@+id/color9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_cyan_500" />

                    <Button
                        android:id="@+id/color10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_deep_orange_500" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/color11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_deep_purple_500"
                        android:textColorHint="@color/md_amber_200" />

                    <Button
                        android:id="@+id/color12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_falcon_500" />

                    <Button
                        android:id="@+id/color13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_grey_500" />

                    <Button
                        android:id="@+id/color14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_white_1000" />

                    <Button
                        android:id="@+id/color15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_teal_500" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/color16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_indigo_500" />

                    <Button
                        android:id="@+id/color17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_purple_500" />

                    <Button
                        android:id="@+id/color18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_pink_500" />

                    <Button
                        android:id="@+id/color19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_lime_500" />

                    <Button
                        android:id="@+id/color20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/md_light_green_500" />
                </LinearLayout>

            </LinearLayout>


            <com.omar.finalherramientas.PaintView
                android:id="@+id/PaintView"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:text="TextView" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnClearPaint"
                    android:layout_width="wrap_content"
                    android:layout_height="36sp"
                    android:layout_weight="1"
                    android:background="@color/md_blue_500"
                    android:hint=" Limpiar Lienzo "
                    android:src="@drawable/ic_delete_forever"
                    android:textColorHint="@color/md_white_1000" />

                <ImageButton
                    android:id="@+id/btnBorrador"
                    android:layout_width="wrap_content"
                    android:layout_height="36sp"
                    android:layout_weight="1"
                    android:background="@color/md_red_500"
                    android:hint=" Borrador "
                    android:src="@drawable/ic_delete_sweep"
                    android:textColorHint="@color/md_white_1000" />

                <ImageButton
                    android:id="@+id/btnLapiz"
                    android:layout_width="wrap_content"
                    android:layout_height="36sp"
                    android:layout_weight="1"
                    android:background="@color/md_green_500"
                    android:hint=" Lapiz "
                    android:src="@drawable/ic_action_picker"
                    android:textColorHint="@color/md_white_1000" />

                <ImageButton
                    android:id="@+id/btnPalete"
                    android:layout_width="wrap_content"
                    android:layout_height="36sp"
                    android:layout_weight="1"
                    android:background="@color/md_cyan_500"
                    android:src="@drawable/ic_palette_white"
                    android:textColorHint="@color/md_white_1000" />

                <ImageButton
                    android:id="@+id/btnPintar"
                    android:layout_width="wrap_content"
                    android:layout_height="36sp"
                    android:layout_weight="1"
                    android:background="@color/md_black_1000"
                    android:hint=" Bloquear "
                    android:src="@drawable/ic_action_lock_open"
                    android:textColorHint="@color/md_white_1000" />
            </LinearLayout>


        </LinearLayout>




    </ScrollView>




</LinearLayout>
